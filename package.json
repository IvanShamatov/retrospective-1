{
  "name": "retrospective",
  "private": true,
  "engines": {
    "yarn": "^1.21.1",
    "node": "^10.0.0"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "extends": "xo-react",
    "parser": "babel-eslint",
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "react/prop-types": 0,
      "unicorn/filename-case": [
        "error",
        {
          "case": "snakeCase"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "xo --fix"
  },
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "@rails/webpacker": "^4.0.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-bulma-components": "2.3.0",
    "react-dom": "^16.8.6",
    "react-select": "^3.0.4",
    "react-textarea-autosize": "^7.1.0",
    "react_ujs": "^2.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-xo-react": "^0.22.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "webpack-dev-server": "^3.7.2",
    "xo": "^0.25.3"
  },
  "scripts": {
    "lint": "xo app/javascript",
    "lint:fix": "yarn lint --fix",
    "test": "yarn lint"
  }
}
